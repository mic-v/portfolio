---
import Welcome from '../components/Welcome.astro';
import Layout from '../layouts/Layout.astro';
import UnderConstruction from '../components/UnderConstruction.astro';

import '../styles/main.css';
import micpicture from '../assets/MicPicture_cropped.jpg';
---


<Layout>
<main class="content-wrapper">
  <section id="hero"> 
    <h1>Welcome to Mic's</h1>
    <header>
      <p>I am Michael Victorino. This is my website.
           You can find information here about or my projects,
           or find ways to contact me.
      </p>
      <picture> 
        <img src={micpicture.src}/>
      </picture>
    </header>
  </section>
  <section>
    <h2>MickleTown's Notice Board</h2>
    <UnderConstruction/>
  </section>
</main>
</Layout>
